@{
    ViewData["Title"] = "Главная";
    var popularApps = ViewBag.PopularApps as List<AppGambit.Models.Application>;
    var newApps = ViewBag.NewApps as List<AppGambit.Models.Application>;
    var categories = ViewBag.Categories as List<dynamic>;
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="display-4 fw-bold mb-4">
                    <i class="fas fa-rocket me-2 me-md-3"></i>AppGambit
                </h1>
                <p class="lead mb-4">
                    Платформа для размещения и скачивания приложений.
                    Делитесь своими разработками и находите полезные программы.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3">
                    <a asp-controller="Applications" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="fas fa-th-large me-2"></i>Все приложения
                    </a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Applications" asp-action="Create" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-plus me-2"></i>Добавить приложение
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Присоединиться
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="stats-grid">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="stat-card bg-white bg-opacity-10 rounded p-3">
                                <h3 class="h2 mb-1">@ViewBag.TotalApps</h3>
                                <p class="mb-0 small">Приложений</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-card bg-white bg-opacity-10 rounded p-3">
                                <h3 class="h2 mb-1">@ViewBag.TotalUsers</h3>
                                <p class="mb-0 small">Пользователей</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Популярные приложения -->
    @if (popularApps != null && popularApps.Any())
    {
        <section class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0">
                    <i class="fas fa-fire text-danger me-2"></i>Популярные приложения
                </h2>
                <a asp-controller="Applications" asp-action="Index" class="btn btn-outline-primary">
                    Смотреть все <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var app in popularApps)
                {
                    <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm app-card-new">
                            <!-- Верхняя часть: иконка слева + название -->
                            <div class="app-card-header">
                                <div class="app-icon-wrapper">
                                    @if (!string.IsNullOrEmpty(app.IconUrl))
                                    {
                                        <img src="@app.IconUrl"
                                             class="app-icon-small"
                                             alt="@app.Name"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                        <div class="app-icon-placeholder d-none">
                                            <i class="fas fa-desktop fa-2x text-muted"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="app-icon-placeholder d-flex">
                                            <i class="fas fa-desktop fa-2x text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="app-header-info">
                                    <h5 class="app-title mb-1">@app.Name</h5>
                                    <p class="app-subtitle mb-0 small">@app.Description</p>
                                </div>
                            </div>

                            <!-- Скриншоты в центре -->
                            @if (app.ScreenshotUrls != null && app.ScreenshotUrls.Any())
                            {
                                <div class="app-screenshots">
                                    @foreach (var screenshot in app.ScreenshotUrls.Take(3))
                                    {
                                        <div class="screenshot-item">
                                            <img src="@screenshot" alt="Screenshot" class="screenshot-img">
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="app-screenshots-placeholder">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                    <p class="text-muted small mt-2">Нет скриншотов</p>
                                </div>
                            }

                            <div class="card-body d-flex flex-column pt-2">
                                <!-- Рейтинг и статистика -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= app.AverageRating)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-muted"></i>
                                            }
                                        }
                                        <small class="text-muted ms-1">(@app.TotalRatings)</small>
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-download me-1"></i>@app.DownloadCount
                                    </small>
                                </div>

                                <!-- Кнопка действия -->
                                <div class="d-grid gap-2">
                                    <a href="/Applications/@app.Name.Replace(" ", "-").ToLower()" class="btn btn-primary">
                                        Подробнее
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }

    <!-- Новые приложения -->
    @if (newApps != null && newApps.Any())
    {
        <section class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0">
                    <i class="fas fa-clock text-success me-2"></i>Новые приложения
                </h2>
                <a asp-controller="Applications" asp-action="Index" class="btn btn-outline-primary">
                    Смотреть все <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var app in newApps)
                {
                    <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm app-card-new">
                            <!-- Бейдж "Новое" -->
                            <div class="badge bg-success position-absolute top-0 end-0 m-2">Новое</div>

                            <!-- Верхняя часть: иконка слева + название -->
                            <div class="app-card-header">
                                <div class="app-icon-wrapper">
                                    @if (!string.IsNullOrEmpty(app.IconUrl))
                                    {
                                        <img src="@app.IconUrl"
                                             class="app-icon-small"
                                             alt="@app.Name"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                        <div class="app-icon-placeholder d-none">
                                            <i class="fas fa-desktop fa-2x text-muted"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="app-icon-placeholder d-flex">
                                            <i class="fas fa-desktop fa-2x text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="app-header-info">
                                    <h5 class="app-title mb-1">@app.Name</h5>
                                    <p class="app-subtitle mb-0 small">@app.Description</p>
                                </div>
                            </div>

                            <!-- Скриншоты в центре -->
                            @if (app.ScreenshotUrls != null && app.ScreenshotUrls.Any())
                            {
                                <div class="app-screenshots">
                                    @foreach (var screenshot in app.ScreenshotUrls.Take(3))
                                    {
                                        <div class="screenshot-item">
                                            <img src="@screenshot" alt="Screenshot" class="screenshot-img">
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="app-screenshots-placeholder">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                    <p class="text-muted small mt-2">Нет скриншотов</p>
                                </div>
                            }

                            <div class="card-body d-flex flex-column pt-2">
                                <!-- Информация об авторе -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <small class="text-muted">
                                        Автор: <a href="@Url.Action("ByDisplayName", "Profile", new { displayName = app.User.DisplayName })" class="text-decoration-none text-muted">@app.User.DisplayName</a>
                                    </small>
                                    <small class="text-muted">
                                        @app.CreatedAt.ToString("dd.MM.yyyy")
                                    </small>
                                </div>

                                <!-- Кнопка действия -->
                                <div class="d-grid gap-2">
                                    <a href="/Applications/@app.Name.Replace(" ", "-").ToLower()" class="btn btn-primary">
                                        Подробнее
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }

    <!-- Категории -->
    @if (categories != null && categories.Any())
    {
        <section class="mb-5">
            <h2 class="h3 mb-4">
                <i class="fas fa-tags text-info me-2"></i>Категории
            </h2>
            <div class="row g-3">
                @foreach (var category in categories)
                {
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <a asp-controller="Applications" asp-action="Index" asp-route-category="@category.Category"
                           class="card text-decoration-none category-card">
                            <div class="card-body text-center p-2 p-sm-3">
                                <i class="fas fa-folder fa-2x text-primary mb-2"></i>
                                <h6 class="card-title mb-1 small">@category.Category</h6>
                                <small class="text-muted d-none d-sm-block">@category.Count приложений</small>
                                <small class="text-muted d-block d-sm-none">@category.Count</small>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </section>
    }
</div>

@section Scripts {
    <!-- Подключаем модульные CSS файлы -->
    <link rel="stylesheet" href="~/css/cards.css" />
    <link rel="stylesheet" href="~/css/home.css" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Ленивая загрузка изображений
            const lazyImages = document.querySelectorAll('.lazy-load');
            
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        const src = img.getAttribute('data-src');
                        
                        if (src) {
                            img.src = src;
                            img.classList.add('loaded');
                            img.removeAttribute('data-src');
                            observer.unobserve(img);
                        }
                    }
                });
            }, {
                rootMargin: '50px 0px',
                threshold: 0.01
            });
            
            lazyImages.forEach(img => {
                imageObserver.observe(img);
            });
            
            // Предзагрузка критических ресурсов
            const criticalImages = document.querySelectorAll('img[src*="icon"]');
            criticalImages.forEach(img => {
                const link = document.createElement('link');
                link.rel = 'preload';
                link.as = 'image';
                link.href = img.src;
                document.head.appendChild(link);
            });
        });
    </script>
}
