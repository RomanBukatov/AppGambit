@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppGambit.Models.User> SignInManager
@inject UserManager<AppGambit.Models.User> UserManager
@inject AppGambit.Services.IUserCacheService UserCacheService

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        @{
            var userId = UserManager.GetUserId(User);
            var currentUser = await UserCacheService.GetCurrentUserAsync(userId);
            var displayName = currentUser?.DisplayName ?? currentUser?.Email?.Split('@')[0] ?? User.Identity?.Name ?? "Пользователь";
            var profileImageUrl = currentUser?.ProfileImageUrl;
        }
        <a class="nav-link dropdown-toggle d-flex align-items-center mobile-profile-dropdown" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: rgba(255,255,255,.9) !important; padding: 0.5rem 0.75rem; white-space: nowrap; min-width: auto; max-width: none;">
            @if (!string.IsNullOrEmpty(profileImageUrl))
            {
                <img src="@profileImageUrl" class="rounded-circle navbar-profile-img mobile-profile-img"
                     alt="Профиль" style="width: 28px; height: 28px; object-fit: cover; margin-right: 0.5rem; flex-shrink: 0;">
            }
            else
            {
                <i class="fas fa-user-circle navbar-profile-icon mobile-profile-icon" style="font-size: 28px; color: rgba(255,255,255,.9) !important; margin-right: 0.5rem; flex-shrink: 0;"></i>
            }
            <span class="navbar-username mobile-profile-username" style="color: rgba(255,255,255,.9) !important; font-weight: 500; min-width: 100px; max-width: 200px; overflow: visible; text-overflow: clip; flex-shrink: 0;">@displayName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <li>
                <a class="dropdown-item" asp-controller="Profile" asp-action="MyProfile">
                    <i class="fas fa-user me-2"></i>Мой профиль
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Applications" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Добавить приложение
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <a class="dropdown-item" asp-controller="Profile" asp-action="Edit">
                    <i class="fas fa-cog me-2"></i>Настройки
                </a>
            </li>
            <li>
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                    <button type="submit" class="dropdown-item">
                        <i class="fas fa-sign-out-alt me-2"></i>Выйти
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register" style="color: rgba(255,255,255,.9) !important;">
            <i class="fas fa-user-plus me-1" style="color: rgba(255,255,255,.9) !important;"></i>Регистрация
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login" style="color: rgba(255,255,255,.9) !important;">
            <i class="fas fa-sign-in-alt me-1" style="color: rgba(255,255,255,.9) !important;"></i>Вход
        </a>
    </li>
}
</ul>